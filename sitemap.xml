---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
                      http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">

{%- comment -%} include all “pages” (those with front‑matter) {%- endcomment -%}
{% for page in site.pages %}
  {% if page.sitemap != false %}
<url>
  <loc>{{ site.url }}{{ page.url | remove: 'index.html' }}</loc>
  {% if page.last_modified_at %}
  <lastmod>{{ page.last_modified_at | date_to_xmlschema }}</lastmod>
  {% endif %}
</url>
  {% endif %}
{% endfor %}

{%- comment -%} include all static .html files under /articles {%- endcomment -%}
{% for file in site.static_files %}
  {% if file.extname == ".html" and file.path contains "/articles/" %}
<url>
  <loc>{{ site.url }}{{ file.path }}</loc>
  <lastmod>{{ file.modified_time | date_to_xmlschema }}</lastmod>
</url>
  {% endif %}
{% endfor %}

</urlset>