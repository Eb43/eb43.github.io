---
layout: null
permalink: /sitemap.xml
sitemap: false      # stop jekyll-sitemap plugin from touching this
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
                      http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">

  {%- comment -%} 1) All Jekyll pages (with front-matter) {%- endcomment -%}
  {% for page in site.pages %}
    {% if page.sitemap != false and page.url != "/sitemap.xml" %}
  <url>
    <loc>{{ site.url }}{{ page.url | remove: 'index.html' }}</loc>
    {% if page.last_modified_at %}
    <lastmod>{{ page.last_modified_at | date_to_xmlschema }}</lastmod>
    {% endif %}
  </url>
    {% endif %}
  {% endfor %}

  {%- comment -%} 2) All .html files under /articles/ {%- endcomment -%}
  {% for file in site.static_files %}
    {% assign rp = file.relative_path %}
    {% if rp contains "articles/" and rp | slice: -5, 5 == ".html" %}
  <url>
    <loc>{{ site.url }}/{{ rp }}</loc>
    <lastmod>{{ file.modified_time | date_to_xmlschema }}</lastmod>
  </url>
    {% endif %}
  {% endfor %}

</urlset>
